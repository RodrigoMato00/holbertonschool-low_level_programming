.PHONY: all clean oclean fclean re
CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
RM = rm
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ) m.h
	$(CC) $(CFLAGS) $(OBJ) m.h -o $(NAME)

clean:
	$(RM) -f $(wildcard *~) $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean
re: oclean all
