CC = gcc
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
RM = rm -f
NAME = school
all:$(OBJ)
    $(CC) $(OBJ) -o $(NAME)

clean:
    $(RM) $(wildcard *~) $(NAME)

oclean:
    $(RM) $(OBJ)

fclean:
    $(RM) $(wildcard *~) $(NAME)
    $(RM) $(OBJ)
re:
    $(RM) $(wildcard *~) $(NAME)
    $(CC) $(OBJ) -o $(NAME)
